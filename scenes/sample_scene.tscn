script/source = "extends Node2D
@onready var player: Player = $Player
@onready var weapon_test: Weapon = $WeaponTest

func _ready() -> void:
	weapon_test.player = player

func _on_hurtbox_hurt(hitbox: Hitbox, hurtbox: Hurtbox) -> void:
	print(hitbox.attack_resource.damage, hurtbox)


func _on_hitbox_hit(hitbox: Hitbox, hurtbox: Hurtbox) -> void:
	print(hitbox.attack_resource.damage, hurtbox)

func _input(event: InputEvent) -> void:
	if event.is_action_pressed(\"light_attack\"):
		weapon_test.attack(Weapon.AttackType.LIGHT)
	if event.is_action_pressed(\"heavy_attack\"):
		weapon_test.attack(Weapon.AttackType.HEAVY)
	if event.is_action_pressed(\"special_attack\"):
		weapon_test.attack(Weapon.AttackType.SPECIAL)
"

